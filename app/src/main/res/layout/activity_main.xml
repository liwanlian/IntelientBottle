<?xml version="1.0" encoding="utf-8"?>  
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"  
    xmlns:app="http://schemas.android.com/apk/res-auto"  
    android:layout_width="match_parent"  
    android:layout_height="match_parent"
    android:background="@drawable/bottle"
    >
  
    <TextView  
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"  
        android:text="LY"
        android:textSize="50dp"
        android:textColor="#BFEFFF"
        android:gravity="center"
        android:id="@+id/homepage_title"
        android:layout_marginTop="19dp"
        android:layout_below="@+id/homepage_daojishi"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/homepage_title1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="96dp"
        android:gravity="center"
        android:text="智能杯垫"
        android:textColor="#BFEFFF"
        android:textSize="50dp"
        android:textStyle="italic"
        android:layout_below="@+id/homepage_title"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/homepage_exitbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="21dp"
        android:text="退出"
        android:textSize="20dp"
        android:textColor="#8EE5EE"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="18dp" />

    <TextView
        android:id="@+id/jumptext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="跳过"
        android:textSize="20dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="12dp" />

    <TextView
        android:id="@+id/homepage_daojishi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:text="TextView"
        android:textSize="22dp"
        android:textColor="#FF4040"
        android:layout_below="@+id/jumptext"
        android:layout_alignEnd="@+id/jumptext"
        android:layout_marginEnd="15dp" />


</RelativeLayout>  
